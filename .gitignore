  <footer>
    © 2025 محمد الجوكر — All rights reserved
  </footer>

</main>

  </div><button class="to-top" id="toTop">أعلى</button>

  <script>
    // Scroll reveal using IntersectionObserver
    const observer = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting) e.target.classList.add( show );
      });
    },{threshold:0.12});
    document.querySelectorAll( .reveal ).forEach(el=>observer.observe(el));

    // Back to top
    const toTop = document.getElementById( toTop );
    window.addEventListener( scroll , ()=>{
      if(window.scrollY > 400) toTop.style.display =  block ; else toTop.style.display =  none ;
    });
    toTop.addEventListener( click , ()=>window.scrollTo({top:0,behavior: smooth }));

    // small floating shape animation (slow)
    const s1 = document.querySelector( .s1 );
    const s2 = document.querySelector( .s2 );
    let t = 0;
    function floatShapes(){
      t += 0.002;
      if(s1) s1.style.transform = `translateY(${Math.sin(t*2)*18}px) translateX(${Math.cos(t)*8}px) rotate(${t*40}deg)`;
      if(s2) s2.style.transform = `translateY(${Math.cos(t*1.6)*12}px) translateX(${Math.sin(t*0.9)*6}px) rotate(${t*10}deg)`;
      requestAnimationFrame(floatShapes);
    }
    requestAnimationFrame(floatShapes);
  </script></body>
</html>
